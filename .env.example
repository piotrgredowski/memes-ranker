# Environment Configuration for Memes Ranker

# Admin dashboard password
ADMIN_PASSWORD=your_secure_admin_password

# JWT secret key for token generation
JWT_SECRET_KEY=your_jwt_secret_key_here_should_be_long_and_random

# Database configuration
DATABASE_PATH=./data/memes.db

# Memes directory
MEMES_DIR=./static/memes

# QR code URL (displayed to users)
QR_CODE_URL=https://memes.bieda.it

# Application settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
